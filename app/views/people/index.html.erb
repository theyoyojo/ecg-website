<% @title="People" %>

<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grad year</th>
      <th>Degree</th>
      <th>Position</th>
      <th>Email</th>
      <th>Linkedin</th>
      <th>Github</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.grad_year %></td>
        <td><%= person.degree %></td>
        <td><%= person.position %></td>
        <td><%= person.email %></td>
        <td><%= person.linkedin %></td>
        <td><%= person.github %></td>
        <td><%= person.website %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

